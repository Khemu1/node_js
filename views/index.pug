doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/styles/global.css")
    title= title
  body 
    h1 All Products

    .products-container
      each product in products
        .item-container
          a(href=`/products/${product.id}`)
            h2.item-heading= product.name
          p.item-description= product.description 
          p.item-price
            sup $
            | #{product.price}/-
          button.item-cart-btn Add To Cart
